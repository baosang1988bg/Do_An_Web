@{
    ViewBag.Title = "SanPhamLoai";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using ElectronicManager.Models;
@model List<SanPham>

<div class="container">
    <div class="row">
        <div class="col-lg-3">

            <!-- Shop Sidebar -->
            <div class="shop_sidebar">
                <div class="sidebar_section">
                    <div class="sidebar_title">Categories</div>
                    <ul class="sidebar_categories">
                        @Html.Action("Loai", "Home")
                    </ul>
                </div>
                <div class="sidebar_section filter_by_section">
                    <div class="sidebar_title">Sắp xếp theo</div>
                    <div class="sidebar_subtitle">Giá</div>
                    <div class="filter_price">
                        <div id="slider-range" class="slider_range"></div>
                        <p>Giá: </p>
                        <p>
                            <input type="text" id="amount" class="amount" readonly style="border: 0; font-weight: bold;">
                        </p>
                    </div>

                </div>
                <div class="sidebar_section">
                    <div class="sidebar_subtitle color_subtitle">Màu</div>
                    <ul class="colors_list">
                        <li class="color"><a href="#" style="background: #b19c83;"></a></li>
                        <li class="color"><a href="#" style="background: #000000;"></a></li>
                        <li class="color"><a href="#" style="background: #999999;"></a></li>
                        <li class="color"><a href="#" style="background: #0e8ce4;"></a></li>
                        <li class="color"><a href="#" style="background: #df3b3b;"></a></li>
                        <li class="color"><a href="#" style="background: #ffffff; border: solid 1px #e1e1e1;"></a></li>
                    </ul>
                </div>
                <div class="sidebar_section">
                    <div class="sidebar_subtitle brands_subtitle">Hãng</div>
                    <ul class="brands_list">
                        @Html.Action("HangNSX", "Home")
                    </ul>
                </div>
            </div>

        </div>

        <div class="col-lg-9">

            <!-- Shop Content -->

            <div class="shop_content">
                <div class="shop_bar clearfix">
                    <div class="shop_product_count"><span>186</span> Sản phẩm</div>
                </div>

                <div class="product_grid">
                    <div class="product_grid_border"></div>
                    <!-- Product Item -->
                    @foreach (var item in Model)
                    {
                        <div class="product_item">
                            <div class="product_border"></div>
                            <div class="product_image d-flex flex-column align-items-center justify-content-center">
                                <a href="@Url.Action("chiTiet", "Home", new { id = item.MaSP })" tabindex="0">
                                    <img src="~/Content/ImgSP/@item.AnhBia" alt="">
                                </a>
                            </div>
                            <div class="product_content">
                                <div class="product_price">@String.Format("{0:0,0}", item.GiaBan) đ</div>
                                <div class="product_name"><a href="@Url.Action("chiTiet", "Home", new { id = item.MaSP })" tabindex="0">@item.TenSP</a></div>
                            </div>
                            <div class="product_fav"><i class="fas fa-heart"></i></div>
                            <ul class="product_marks">
                                <li class="product_mark product_discount"></li>
                                <li class="product_mark product_new"></li>
                            </ul>
                        </div>
                    }
                </div>

                

            </div>

        </div>
    </div>
</div>
