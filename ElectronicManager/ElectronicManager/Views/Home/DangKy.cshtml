<table align="center">
    <h2>Trang đăng ký</h2>
    @using (Html.BeginForm())
    { 
        <tr>
            <td>Họ và tên </td>
            <td>@Html.TextBox("tenUser")</td>
        </tr>
        <tr>
            <td>Tên đăng nhập </td>
            <td>@Html.TextBox("userUser")</td>
        </tr>
        <tr>
            <td>Mật khẩu </td>
            <td>@Html.TextBox("matkhauUser")</td>
        </tr>
        <tr>
            <input type="submit" value="Đăng ký"/>
        </tr>
    }
</table>